<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Colorlayout1"
    android:background="@drawable/gradient_list2"
    tools:context=".Colors.color_levels">

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/house1"
        android:onClick="home" />

    <TextView
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:layout_gravity="center"

        android:text="Levels"
        android:textColor="#3F51B5"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="#D8B6A4F8"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:onClick="color_level1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="#828DD5"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:onClick="color_level2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#5D6ECE"
            android:text="3"
            android:textColor="#FFF"
            android:onClick="color_level3"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="#D8B6A4F8"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:onClick="color_level4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="#828DD5"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:onClick="color_level5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#5D6ECE"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:onClick="color_level6"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="#D8B6A4F8"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="color_level7"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:background="#828DD5"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="color_level8"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#5D6ECE"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="color_level9"/>
    </LinearLayout>

</LinearLayout>